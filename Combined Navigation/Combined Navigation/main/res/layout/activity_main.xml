<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/header"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Combined Navigation"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/setting_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:paddingHorizontal="10dp"
            android:src="@drawable/setting"
            android:layout_marginStart="100dp"
            android:contentDescription="setting"
            android:scaleType="centerInside"
            app:tint="@color/white" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <!-- Scrollable Content View 1 -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_navigation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/search_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search..."
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/search_bar"
                    android:inputType="text"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/comscie" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/ComputerScience"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"
                    android:paddingTop="8dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/white"
                    android:text="@string/brief_history_computer_science"
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>

        <!-- Content View 2 (Initially hidden) -->
        <ScrollView
            android:id="@+id/content_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_navigation"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_launcher_foreground" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is the second content page."
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/white"
                    android:padding="8dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal"
        android:background="@drawable/nav_button_bg"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:visibility="gone"
        android:elevation="2dp">

        <!-- Zoom In -->
        <ImageButton
            android:id="@+id/plus_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/nav_button"
            android:src="@drawable/aup"
            android:contentDescription="Zoom In"
            android:scaleType="centerInside"
            app:tint="@color/blue"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Zoom Out -->
        <ImageButton
            android:id="@+id/minus_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/nav_button"
            android:src="@drawable/adown"
            android:contentDescription="Zoom Out"
            android:scaleType="centerInside"
            app:tint="@color/blue"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Search -->
        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/nav_button"
            android:src="@drawable/search"
            android:contentDescription="Search"
            android:scaleType="centerInside"
            app:tint="@color/blue"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Back -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/nav_button"
            android:src="@drawable/previous"
            android:contentDescription="Go Back"
            android:scaleType="centerInside"
            app:tint="@color/blue"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Next -->
        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/nav_button"
            android:src="@drawable/next"
            android:contentDescription="Next"
            android:scaleType="centerInside"
            app:tint="@color/blue"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <!-- Floating Action Button (always visible) -->
    <ImageButton
        android:id="@+id/fab_toggle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="290dp"
        android:elevation="10dp"
        android:background="@drawable/fab_bg"
        android:src="@drawable/fab"
        android:contentDescription="Toggle navigation"
        android:scaleType="centerInside"
        app:tint="@color/orange"
        tools:ignore="TouchTargetSizeCheck" />
</RelativeLayout>
